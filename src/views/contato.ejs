<%- include('includes/head') %>
<%- include('includes/nav') %>
    
    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>

            <div class="col-lg-8 my-3">
                <h1 class="text-center">Contatos</h1>
                <p class="text-center lead">Crie e edite seus contatos.</p>
                <%- include('includes/messages') %>

                <% if(contato._id) { %>
                    <form action="/contato/edit/<%= contato._id %>" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group">
                        <label>Nome</label>
                        <input value="<%= contato.nome %>" type="text" class="form-control" name="nome">
                        </div>

                        <div class="form-group">
                            <label>Sobrenome</label>
                            <input value="<%= contato.sobrenome %>" type="text" class="form-control" name="sobrenome">
                        </div>

                        <div class="form-group">
                            <label>Email</label>
                            <input value="<%= contato.email %>" type="email" class="form-control" name="email">
                        </div>

                        <div class="form-group">
                            <label>Telefone</label>
                            <input value="<%= contato.telefone %>" type="tel" class="form-control" name="telefone">
                        </div>
                    
                        <a class="btn btn-outline-dark" role="button" href="/contato/index" >Adicionar outro contato</a>
                        <button type="submit" class="btn btn-outline-dark botao-alterar">Alterar</button>
                        <a class="btn btn-outline-dark" role="button" href="/">Agenda</a>
                    </form>
                <% } else { %>
                    <form action="/contato/register" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group">
                        <label>Nome</label>
                        <input value="<%= contato.nome %>" type="text" class="form-control" name="nome">
                        </div>

                        <div class="form-group">
                            <label>Sobrenome</label>
                            <input value="<%= contato.sobrenome %>" type="text" class="form-control" name="sobrenome">
                        </div>

                        <div class="form-group">
                            <label>Email</label>
                            <input value="<%= contato.email %>" type="email" class="form-control" name="email">
                        </div>

                        <div class="form-group">
                            <label>Telefone</label>
                            <input value="<%= contato.telefone %>" type="tel" class="form-control" name="telefone">
                        </div>
                    
                        <button type="submit" class="btn btn-outline-dark">Salvar</button>
                    </form>
                <% } %>
            </div>

            <div class="col-lg-2"></div>
        </div>
    </div>

<%- include('includes/footer') %>